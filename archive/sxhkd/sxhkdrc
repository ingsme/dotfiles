#
# bspwm hotkeys
#
# this is a horrible mess!
#

super + q
  $HOME/bin/shutdown_menu

super + w
  bspc window -c

super + t
  bspc desktop -l next

super + b
  bspc desktop -B

super + e
  bspc desktop -E

super + i
  bspc control --toggle-visibility

super + {r,shift + r,u}
  bspc desktop -R {90,-90,180}

super + {shift+s,s,f,x,X,m}
  bspc window -t {pseudo_tiled,floating,fullscreen,locked,sticky,private}

super + alt + {shift+s,s,f,x,X,m}
  bspc rule -a \* -o {pseudo_tiled,floating,fullscreen,locked,sticky,private}=on

super + alt + {equal,minus}
  wg=$(bspc config -d focused window_gap); \
  bspc config -d focused window_gap $((wg {+,- (wg >= 3) *} 3))

super + Tab
  bspc window -f next

super + apostrophe
  bspc window -s last

super + y
  bspc window -w last.manual

super + {_,shift + }{h,j,k,l}
  bspc window -{f,s} {left,down,up,right}

super + {comma,period}
  bspc desktop -C {backward,forward}

super + alt + {comma,period}
  bspc desktop -F {horizontal,vertical}

super + {p,n}
  bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
  bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
  bspc {window -p cancel,desktop -c}

super + {Left,Right,Up,Down}
  xdo move {-x -20,-x +20,-y -20,-y +20}

super + alt + {Left,Right,Up,Down}
  xdo resize {-w -20,-w +20,-h -20,-h +20}
    
super + alt + {h,j,k,l}
  bspc window -e {left -20,down +20,up -20,right +20}

super + alt + shift + {h,j,k,l}
  bspc window -e {right -20,up +20,down -20,left +20}

super + ctrl + {1-9}
  bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
  bspc {desktop -f,window -d} ^{1-9,10}

~button1
  bspc pointer -g focus

super + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
  bspc pointer -t %i %i
    
super + minus
  bspc monitor -f last 

super + equal
  bspc monitor -f next 
#
# wm independent hotkeys
#

super + Return
  urxvtc

super + shift + Return
  bspc rule -a urxvt -o pseudo_tiled=on floating=off && urxvtc

super + ctrl + Return
  bspc rule -a urxvt -o floating=on && urxvtc

super + space
  $HOME/bin/menu 

super + shift + space
  gmrun

super + ctrl + minus
  amixer set Master 5-

super + ctrl + equal
  amixer set Master 5+

super + ctrl + {z,x,c}
  mpc -q {toggle,prev,next}

super + ctrl + p
  pwgen -nc 10 1 | xsel -bi

ctrl + alt + l
  i3lock -c 000000

# make sxhkd reload its configuration files:
super + Escape
  pkill -USR1 -x sxhkd
